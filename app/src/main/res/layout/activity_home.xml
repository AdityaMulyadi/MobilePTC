    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="409dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_margin="15dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/umbrella"
            />

        <TextView
            android:id="@+id/namaAplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lidah Cuaca"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/boy"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="130dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="300dp"
            android:orientation="vertical"

            android:background="@drawable/bluesky"
            >

            <LinearLayout
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp"
                android:padding="10dp"
                android:backgroundTint="@color/bg2"
                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/placeholder"
                            />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bumi Harapan"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senin, 28 Oktober 2024"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppinsregular"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="29Â°" />



            </LinearLayout>


        <LinearLayout
            android:id="@+id/info21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/info1"
            android:background="@drawable/shape"
            android:backgroundTint="@color/bg2"
            android:layout_margin="19dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:padding="15dp"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30/10/2024"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                    />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hari Ini"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:layout_marginLeft="30dp"
                        />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/cloudyrain"
                        android:layout_marginLeft="20dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31/10/2024"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Besok"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:layout_marginLeft="30dp"
                        />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/cloudyrain"
                        android:layout_marginLeft="20dp"
                        />
                </TableRow>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/11/2024"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Besok Lusa"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"
                        android:layout_marginLeft="30dp"
                        />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/cloudyrain"
                        android:layout_marginLeft="20dp"
                        />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/databmkg"
            app:layout_constraintTop_toBottomOf="@id/info21"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Detail Cuaca Hari Ini"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="18dp"
                android:textStyle="italic"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/bg2"
                        >

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/humidity"
                            />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55%"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:textSize="25dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape"
                        android:padding="10dp"
                        android:backgroundTint="@color/bg2"
                        >

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/wind"
                            />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14km/jam"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape"
                        android:padding="10dp"
                        android:backgroundTint="@color/bg2"
                        >

                        <ImageView
                            android:id="@+id/imageViewc"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/precipitation"
                            />

                        <TextView
                            android:id="@+id/textViewd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14km/jam"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape"
                        android:padding="10dp"
                        android:backgroundTint="@color/bg2"
                        >

                        <ImageView
                            android:id="@+id/imageViewe"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/cloud_cover"
                            />

                        <TextView
                            android:id="@+id/textViewf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14km/jam"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape"
                        android:padding="10dp"
                        android:backgroundTint="@color/bg2"
                        >

                        <ImageView
                            android:id="@+id/imageViewg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/wind_socket"
                            />

                        <TextView
                            android:id="@+id/textViewh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14km/jam"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>

            <LinearLayout
                android:id="@+id/dataiot"
                app:layout_constraintTop_toBottomOf="@id/info21"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/subjuduliot"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Data dari perangkat IoT"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/shape"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="@color/bg2"
                            >

                            <ImageView
                                android:id="@+id/dataCahaya"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/idea"
                                />

                            <TextView
                                android:id="@+id/dataIntensitasCahaya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2000"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="15dp"
                                android:textSize="25dp"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape"
                            android:padding="10dp"
                            android:backgroundTint="@color/bg2"
                            >

                            <ImageView
                                android:id="@+id/ikonHujan"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/rainyday"
                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape"
                            android:padding="10dp"
                            android:backgroundTint="@color/bg2"
                            >

                            <ImageView
                                android:id="@+id/ikonJemuran"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/jemurang"
                                />

                            <TextView
                                android:id="@+id/dataKondisiIot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="True"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="15dp"
                                android:textSize="20dp"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>



            </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/databmkg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:gravity="center"

            >

            <TextView
                android:id="@+id/textView14"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="ON"
                android:textSize="30dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_left"
                />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="OFF"
                android:textSize="30dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_right"/>
        </LinearLayout>





        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>