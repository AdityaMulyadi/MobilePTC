<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/bgReg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/umbrella"
        />

    <EditText
        android:id="@+id/plainEmail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:padding="12dp"
        android:textColorHint="@color/white2"
        android:textColor="@color/white2"
        android:background="@drawable/shape_reg"
        android:fontFamily="@font/poppinsregular"
        />

    <EditText
        android:id="@+id/plainPass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/plainEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:padding="12dp"
        android:textColorHint="@color/white2"
        android:textColor="@color/white2"
        android:background="@drawable/shape_reg"
        />

    <EditText
        android:id="@+id/plainKonfPass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/plainPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:hint="Konfirmasi Password"
        android:padding="12dp"
        android:textColorHint="@color/white2"
        android:textColor="@color/white2"
        android:background="@drawable/shape_reg"
        />

    <EditText
        android:id="@+id/namaUser"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_reg"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Nama"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white2"
        android:textColorHint="@color/white2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plainKonfPass"
         />

    <EditText
        android:id="@+id/alamatUser"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/namaUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:hint="Alamat"
        android:fontFamily="@font/poppinsregular"
        android:padding="12dp"
        android:textColorHint="@color/white2"
        android:textColor="@color/white2"
        android:background="@drawable/shape_reg"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/alamatUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:background="@drawable/shape_button"

        />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="Sudah punya akun?"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginLeft="110dp"
        />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Masuk"
        android:layout_marginTop="10dp"
        android:textColor="@color/kuning"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>